@model MusikWebApp.Models.Instrumentos

@{
    ViewData["Title"] = "Crear Instrumento";
}

<div class="container mt-4">
    <h2>Crear Nuevo Instrumento</h2>
    
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="nombre" class="form-label">Nombre *</label>
                    <input asp-for="nombre" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label asp-for="descripcion" class="form-label">Descripción</label>
                    
                    <textarea asp-for="descripcion" class="form-control" rows="3", required></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="imagen" class="form-label">URL Imagen (Opcional)</label>
                    <input asp-for="imagen" class="form-control" required />
                    
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="precio" class="form-label">Precio *</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="precio" type="number" step="0.01" min="0.01" class="form-control" required />
                    </div>
                    <div class="form-text">El precio debe ser mayor a $0</div>
                </div>

                <div class="mb-3">
                    <label asp-for="stock" class="form-label">Stock *</label>
                    <input asp-for="stock" type="number" min="1" class="form-control" required />
                    <div class="form-text">El stock debe ser 1 o mayor</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Categoría *</label>
                    <select name="categoria.id_categoria" class="form-select" required>
                        <option value="">Seleccione una categoría</option>
                        @foreach (var item in ViewBag.Categorias as IEnumerable<SelectListItem>)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Marca *</label>
                    <select name="marca.id_marca" class="form-select" required>
                        <option value="">Seleccione una marca</option>
                        @foreach (var item in ViewBag.Marcas as IEnumerable<SelectListItem>)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="ListarInst" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
