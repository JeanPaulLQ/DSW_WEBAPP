@model MusikWebApp.Models.Instrumentos

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Crear Instrumento";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0">🎸 Crear Nuevo Instrumento</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="imagen" class="form-label fw-bold"></label>
                    <input asp-for="imagen" class="form-control" />
                    <span asp-validation-for="imagen" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="nombre" class="form-label fw-bold"></label>
                    <input asp-for="nombre" class="form-control" />
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="descripcion" class="form-label fw-bold"></label>
                    <textarea asp-for="descripcion" class="form-control"></textarea>
                    <span asp-validation-for="descripcion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="precio" class="form-label fw-bold"></label>
                    <input asp-for="precio" class="form-control" />
                    <span asp-validation-for="precio" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="stock" class="form-label fw-bold"></label>
                    <input asp-for="stock" class="form-control" />
                    <span asp-validation-for="stock" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="activo" />
                    <label asp-for="activo" class="form-check-label fw-bold"></label>
                </div>

                <div class="mb-3">
                    <label asp-for="fecha_ingreso" class="form-label fw-bold"></label>
                    <input asp-for="fecha_ingreso" class="form-control" type="date" />
                    <span asp-validation-for="fecha_ingreso" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="id_categoria" class="form-label fw-bold"></label>
                    <input asp-for="id_categoria" class="form-control" />
                    <span asp-validation-for="id_categoria" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="id_marca" class="form-label fw-bold"></label>
                    <input asp-for="id_marca" class="form-control" />
                    <span asp-validation-for="id_marca" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
