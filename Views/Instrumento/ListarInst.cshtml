@model IEnumerable<MusikWebApp.Models.Instrumentos>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Gestión de Instrumentos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">🎸 Gestión de Instrumentos</h2>
        <a asp-action="Create" class="btn btn-primary">
            ➕ Nuevo Instrumento
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Imagen</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Activo</th>
                        <th>Fecha Ingreso</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.id_instrumentos</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.imagen))
                                {
                                    <img src="@item.imagen" alt="@item.nombre" width="80" height="80" class="rounded shadow-sm" />
                                }
                                else
                                {
                                    <span class="text-muted">Sin imagen</span>
                                }
                            </td>
                            <td>@item.nombre</td>
                            <td>@item.descripcion</td>
                            <td>$ @item.precio.ToString("N2")</td>
                            <td>@item.stock</td>
                            <td>
                                @if (item.activo)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactivo</span>
                                }
                            </td>
                            <td>@item.fecha_ingreso.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.id_instrumentos" class="btn btn-sm btn-warning">
                                    ✏️ Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.id_instrumentos" class="btn btn-sm btn-info text-white">
                                    🔎 Detalles
                                </a>
                                <!-- Botón eliminar con SweetAlert -->
                                <button class="btn btn-sm btn-danger" onclick="confirmarEliminacion(@item.id_instrumentos, '@Html.Raw(item.nombre)')">
                                    🗑️ Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        // Función para confirmar eliminación con SweetAlert
        function confirmarEliminacion(id, nombre) {
            Swal.fire({
                title: '⚠️ ¿Estás seguro?',
                html: `<div style="font-size: 16px;">
                         ¿Deseas eliminar el instrumento:<br>
                         <strong style="color: #dc3545;">${nombre}</strong>?<br><br>
                         <small style="color: #6c757d;">Esta acción no se puede deshacer</small>
                       </div>`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="fas fa-trash me-2"></i>Sí, eliminar',
                cancelButtonText: '<i class="fas fa-times me-2"></i>Cancelar',
                customClass: {
                    popup: 'swal2-modern',
                    title: 'swal2-title-warning',
                    htmlContainer: 'swal2-content-custom',
                    confirmButton: 'swal2-confirm-delete',
                    cancelButton: 'swal2-cancel-button'
                },
                backdrop: true,
                allowOutsideClick: false,
                allowEscapeKey: true,
                focusConfirm: false,
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    // Mostrar loading mientras se elimina
                    Swal.fire({
                        title: 'Eliminando...',
                        html: `<div style="font-size: 16px;">
                                 Eliminando <strong>${nombre}</strong><br>
                                 <small>Por favor espera un momento</small>
                               </div>`,
                        icon: 'info',
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        showConfirmButton: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    
                    // Redirigir para eliminar
                    window.location.href = `@Url.Action("Delete", "Instrumento")/${id}`;
                }
            });
        }
        
        // Mostrar SweetAlert de éxito si hay mensaje en TempData
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            Swal.fire({
                icon: 'success',
                title: 'Operación Exitosa',
                html: '<div style="font-size: 16px; color: #495057;">@Html.Raw(TempData["SuccessMessage"])</div>',
                showConfirmButton: true,
                confirmButtonText: 'Continuar',
                confirmButtonColor: '#28a745',
                buttonsStyling: true,
                customClass: {
                    popup: 'swal2-modern',
                    title: 'swal2-title-custom',
                    htmlContainer: 'swal2-content-custom'
                },
                backdrop: true,
                allowOutsideClick: true,
                allowEscapeKey: true,
                timer: 5000,
                timerProgressBar: true
            });
            </text>
        }
    </script>
}

<style>
    .animate__animated.animate__fadeInDown {
        animation-duration: 0.5s;
    }
    
    /* Estilos personalizados para SweetAlert */
    .swal2-modern {
        border-radius: 15px !important;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
    }
    
    .swal2-title-custom {
        font-size: 24px !important;
        font-weight: 600 !important;
        color: #2c3e50 !important;
        margin-bottom: 20px !important;
    }
    
    .swal2-title-warning {
        font-size: 22px !important;
        font-weight: 600 !important;
        color: #856404 !important;
        margin-bottom: 20px !important;
    }
    
    .swal2-content-custom {
        font-size: 16px !important;
        line-height: 1.5 !important;
        color: #495057 !important;
        margin-bottom: 25px !important;
    }
    
    .swal2-timer-progress-bar {
        background: #28a745 !important;
    }
    
    .swal2-confirm-delete {
        font-weight: 600 !important;
        padding: 10px 24px !important;
        font-size: 16px !important;
    }
    
    .swal2-cancel-button {
        font-weight: 600 !important;
        padding: 10px 24px !important;
        font-size: 16px !important;
    }
    
    /* Hover effects para botones */
    .swal2-confirm-delete:hover {
        background-color: #c82333 !important;
        transform: translateY(-1px);
    }
    
    .swal2-cancel-button:hover {
        background-color: #5a6268 !important;
        transform: translateY(-1px);
    }
</style>
