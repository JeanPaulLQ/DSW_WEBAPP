@model MusikWebApp.Models.Instrumentos

@{
    ViewData["Title"] = "Editar Instrumento";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0"> Editar Instrumento</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="id_instrumentos" />
                <input type="hidden" asp-for="fecha_ingreso" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="nombre" class="form-label fw-bold">Nombre</label>
                            <input asp-for="nombre" class="form-control" required />
                            <span asp-validation-for="nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="imagen" class="form-label fw-bold">URL Imagen</label>
                            <input asp-for="imagen" class="form-control" />
                            <span asp-validation-for="imagen" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="descripcion" class="form-label fw-bold">Descripción</label>
                    <textarea asp-for="descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="descripcion" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="precio" class="form-label fw-bold">Precio</label>
                            <input asp-for="precio" class="form-control" type="number" step="0.01" required />
                            <span asp-validation-for="precio" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="stock" class="form-label fw-bold">Stock</label>
                            <input asp-for="stock" class="form-control" type="number" required />
                            <span asp-validation-for="stock" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Estado</label>
                            <div class="form-check">
                                <input asp-for="activo" class="form-check-input" type="checkbox" />
                                <label asp-for="activo" class="form-check-label">Activo</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Categoría</label>
                            <select name="categoria.id_categoria" class="form-select" required>
                                <option value="">Seleccione una categoría</option>
                                @foreach (var item in ViewBag.Categorias as IEnumerable<SelectListItem>)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Marca</label>
                            <select name="marca.id_marca" class="form-select" required>
                                <option value="">Seleccione una marca</option>
                                @foreach (var item in ViewBag.Marcas as IEnumerable<SelectListItem>)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        Guardar Cambios
                    </button>
                    <a asp-action="ListarInst" class="btn btn-secondary">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}