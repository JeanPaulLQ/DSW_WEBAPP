@model IEnumerable<MusikWebApp.Models.Usuarios>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">👤 Gestión de Usuarios</h2>
        <a asp-action="CreateUsuario" class="btn btn-primary">
            ➕ Nuevo Usuario
        </a>
    </div>

    <!-- ✅ Bloque para mostrar mensajes de éxito o error -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-@TempData["TipoMensaje"] alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Teléfono</th>
                        <th>Fecha Registro</th>
                        <th>Dirección</th>
                        <th>Correo</th>
                        <th>Documento</th>
                        <th>Rol</th>
                        <th>Tipo Doc</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.id_usuario</td>
                            <td>@item.nombre</td>
                            <td>@item.apellido</td>
                            <td>@item.telefono</td>
                            <td>@item.fecha_registro.ToString("dd/MM/yyyy")</td>
                            <td>@item.direccion</td>
                            <td>@item.correo</td>
                            <td>@item.n_documento</td>
                            <td>@item.nombreRol</td>
                            <td>@item.nombreTipoDocumento</td>
                            <td>
                                <a asp-action="EditUsuario" asp-route-id="@item.id_usuario" class="btn btn-sm btn-warning">
                                    Editar
                                </a>
                                <form asp-action="DeleteUsuario" asp-route-id="@item.id_usuario" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger text-white">
                                        Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
