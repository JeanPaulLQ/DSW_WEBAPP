@model IEnumerable<MusikWebApp.Models.Usuarios>

@{
    Layout = "_LayoutAdmin";  // 👈 Aquí aplicamos el layout del admin
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">👤 Gestión de Usuarios</h2>
        <a asp-action="Create" class="btn btn-primary">
            ➕ Nuevo Usuario
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Teléfono</th>
                        <th>Fecha Registro</th>
                        <th>Dirección</th>
                        <th>Correo</th>
                        <th>Documento</th>
                        <th>Rol</th>
                        <th>Tipo Doc</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.id_usuario</td>
                            <td>@item.nombre</td>
                            <td>@item.apellido</td>
                            <td>@item.telefono</td>
                            <td>@item.fecha_registro.ToString("dd/MM/yyyy")</td>
                            <td>@item.direccion</td>
                            <td>@item.correo</td>
                            <td>@item.n_documento</td>
                            <td>@item.nombreRol</td>
                            <td>@item.nombreTipoDocumento</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.id_usuario" class="btn btn-sm btn-warning">
                                    ✏️ Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.id_usuario" class="btn btn-sm btn-info text-white">
                                    🔎 Detalles
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
